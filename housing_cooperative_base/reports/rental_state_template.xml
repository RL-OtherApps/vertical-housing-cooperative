<odoo>
    <template id="report_rental_state_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Report title</h2>
                        <p>This object's name is <span t-field="o.start"/></p>
                        <h2>Report table</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Tenant</strong></th>
                                    <th class="text-right"><strong>Lease</strong></th>
                                    <th class="text-right"><strong>Premise</strong></th>
                                    <th class="text-right"><strong>start</strong></th>
                                    <th class="text-right"><strong>end</strong></th>
                                    <th class="text-right"><strong>rent</strong></th>
                                    <th class="text-right"><strong>charges</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.lease_line_ids" t-as="l">
                                    <td>
                                        <span t-field="l.tenant_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.lease_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.premise_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.start"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.end"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.rent"/>
                                        <span>CHF</span>
<!--                                        <span t-field="l.rent" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.charges"/>
                                        <span>CHF</span>
<!--                                        <span t-field="l.charges" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
