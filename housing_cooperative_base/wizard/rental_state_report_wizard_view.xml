<?xml version="1.0"?>
<odoo>
    <record id="rental_state_wizard_view" model="ir.ui.view">
        <field name="name">Rental State Report Wizard</field>
        <field name="model">hc.rental.state.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="start"/>
                    <field name="end"/>
                </group>
                <group>
                    <field name="building_ids"/>
                    <field name="lease_line_ids" invisible="1" />
                </group>
                <footer>
                    <button type="object"
                    name="create_report"
                    string="Create report"
                    class="oe_highlight"/>
                    <button special="cancel"
                    string="Cancel"
                    class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="rental_state_wizard_view_action" model="ir.actions.act_window">
        <field name="name">Rental State Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hc.rental.state.report.wizard</field>
        <field name="view_mode">form</field>
    </record>
</odoo>