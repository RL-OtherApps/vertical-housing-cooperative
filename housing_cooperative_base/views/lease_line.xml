<odoo>
    <record id="lease_line_view_timeline" model="ir.ui.view">
        <field name="name">lease_line_view_timeline</field>
        <field name="model">hc.lease.line</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline date_start="start"
                      date_stop="end"
                      default_group_by="premise_id"
                      event_open_popup="true"
                      zoomKey="ctrlKey"
                      colors="#ec7063:premise_id.name == 'Housing 1 - Arcade';#2ecb71:lease_state=='done';">
                <field name="name"/>
                <field name="premise_id"/>
                <field name="lease_id"/>
                <field name="tenant_id"/>
                <field name="lease_state"/>
                <templates>
                    <div t-name="timeline-item">
                        <strong><span t-esc="record.name"/></strong>
                        <br>Lease duration: <span t-esc="record.start"/> > <span t-esc="record.end"/> (<span t-esc="record.lease_state"/>)</br>
                    </div>
                </templates>
            </timeline>
        </field>
    </record>

    <record id="lease_line_view_tree" model="ir.ui.view">
        <field name="name">lease_line_view_tree</field>
        <field name="model">hc.lease.line</field>
        <field name="arch" type="xml">
            <tree string="lease_line_tree">
                <field name="building_id"/>
                <field name="premise_id"/>
                <field name="tenant_id"/>
                <field name="lease_id"/>
                <field name="start"/>
                <field name="end"/>
            </tree>
        </field>
    </record>

    <record id="lease_line_view_form" model="ir.ui.view">
        <field name="name">lease_line_view_form</field>
        <field name="model">hc.lease.line</field>
        <field name="arch" type="xml">
            <form string="lease_line_form">
                <sheet>
                    <group>
                        <field name="premise_id"/>
                        <field name="lease_id"/>
                    </group>
                    <group>
                        <field name="start"/>
                        <field name="end"/>
                        <field name="tenant_id"/>
                        <field name="building_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="overview_view_action" model="ir.actions.act_window">
        <field name="name">Overview</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hc.lease.line</field>
        <field name="view_mode">tree,form,timeline</field>
    </record>
</odoo>
